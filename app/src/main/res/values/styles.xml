<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Settings" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimarySettings</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSettings</item>
        <item name="colorAccent">@color/colorAccentSettings</item>
    </style>

    <style name="Country" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimarySettings</item>
        <item name="colorPrimaryDark">@color/colorAccentSettings</item>
        <item name="colorAccent">@color/colorAccentSettings</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorAccentSettings</item>
    </style>
</resources>
